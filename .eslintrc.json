{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "root": true,
    "extends": [
        "eslint:recommended", 
        "prettier",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins":[
        "prettier",
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier": ["error"]
    }
}
