
// To add prettier to the eslint code:
// add: 
// 1-"prettier" to "extends"
// 2-"prettier/prittier":["erroer"] to "rules"
// 3-"prettier" to "plugins"

// To add typescript to eslint:
// {
//   "root": true,
//   "parser": "@typescript-eslint/parser",
//   "plugins": [
//     "@typescript-eslint"
//   ],
//   "extends": [
//     "eslint:recommended",
//     "plugin:@typescript-eslint/eslint-recommended",
//     "plugin:@typescript-eslint/recommended"
//   ]
